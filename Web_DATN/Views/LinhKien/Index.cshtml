@model IEnumerable<F4_API.Models.LinhKien>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            @Html.Partial("_ProductCard", item)
        }
    </div>
</div><!-- Phân trang -->
<nav aria-label="Page navigation example" class="d-flex justify-content-center mt-4">
    <ul class="pagination">
        <!-- Previous -->
        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-pageNumber="@(ViewBag.CurrentPage - 1)"
               asp-route-DanhMucId="@ViewBag.DanhMucId"
               asp-route-timkiem="@ViewBag.TimKiem">
                <i class="fas fa-chevron-left"></i>
            </a>
        </li>

        <!-- Các trang -->
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@i"
                   asp-route-DanhMucId="@ViewBag.DanhMucId"
                   asp-route-timkiem="@ViewBag.TimKiem">@i</a>
            </li>
        }

        <!-- Next -->
        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-pageNumber="@(ViewBag.CurrentPage + 1)"
               asp-route-DanhMucId="@ViewBag.DanhMucId"
               asp-route-timkiem="@ViewBag.TimKiem">
                <i class="fas fa-chevron-right"></i>
            </a>
        </li>
    </ul>
</nav>

